---
import features from '../../config/features.json';
---
<h1 class="text-center font-bold text-5xl mt-10">Featuures</h1>
<div class="grid md:grid-cols-3 gap-4 p-4">
    {features.map(featture => (
            <div class="bg-slate-800 p-10 rounded-xl">
                <h1 class="text-2xl font-bold my-4">{featture.title}</h1>
                <p>{featture.description}</p>
            </div>
        ))}
</div>
