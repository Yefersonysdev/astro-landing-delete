---
import projects from '../../config/projects.json';

---


<h2 class="text-5xl font-bold my-5 text-center">Projects</h2>

{
    projects.map(project => (
        <div class="flex flex-col mb-2 text-center md:flex-row md:text-left">
            <div class="flex-1 p-4 ">
                <h2 class="text-2xl font-bold my-4">{project.title}</h2>
                <p class="my-3">{project.description}</p>
                <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400">More info</button>
            </div>
            <div class="flex-1 ">
                <img class="md:w-72 m-auto " src={project.image} alt="">
            </div>
        </div>
    ))
}
